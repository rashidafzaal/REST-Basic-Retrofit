<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <TextView
        android:id="@+id/row_patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patientName"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/row_patientEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patientEmail"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/row_patientGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patientGender"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/row_patientAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patientAge"
        android:textColor="@color/black"/>

</LinearLayout>